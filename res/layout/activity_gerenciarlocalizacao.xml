<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/branco" >

    <Button
        android:id="@+id/bt_buscaproduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="veririficalocalizacao"
        android:text="Atualizar Localizacao" 
        android:background="@drawable/button"/>
    
    

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude: "
            android:textStyle="bold" 
            android:textSize="@dimen/font"/>

        <TextView
            android:id="@+id/txtvl_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" 
            android:textSize="@dimen/font"
        	android:textStyle="bold"/>

        

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude: "
            android:textSize="@dimen/font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtvl_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/font"
            android:textStyle="bold"/>

        

    </TableRow>

    <EditText
        android:id="@+id/txtcoordenadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

            <requestFocus />
        </EditText>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="apagalocalizacao"
        android:text="Apagar Localização" 
        android:background="@drawable/button"/>
        
    <ListView
        android:id="@+id/listacoordenadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
</LinearLayout>