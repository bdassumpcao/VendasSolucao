<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@color/branco"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira o C칩digo de Acesso"
        android:textSize="@dimen/font"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtcodigoacesso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira o nome do usu치rio"
        android:textSize="@dimen/font"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtnm_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira o E-mail da loja"
        android:textSize="@dimen/font"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtnm_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/cbConferir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciar Localizacao"
        android:textSize="@dimen/font"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <AbsoluteLayout>

            <Button
                android:id="@+id/bt_buscaproduto"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:onClick="InserirCodigo"
                android:text="Inserir C칩digo" />

            <Button
                android:id="@+id/button2"
