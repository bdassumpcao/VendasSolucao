<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtcodprod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do Item"
        />

   

    <EditText
        android:id="@+id/edtnmproduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="" >

        <requestFocus />
    </EditText>

  
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/buscar"
        android:onClick="buscarproduto"
        android:layout_gravity="center" 
        android:contentDescription="@string/buscar"/>
    
    <ListView android:layout_width="match_parent"
     
        android:layout_height="wrap_content" android:id="@+id/listaProduto"
        >
        
    </ListView>
        

</LinearLayout>
