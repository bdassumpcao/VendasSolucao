<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/branco">

    <TextView
        android:id="@+id/txtcodprod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do Item"
        android:textSize="@dimen/font"
        android:textStyle="bold"/>

   

    <EditText
        android:id="@+id/edtnmproduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:hint="" >

        <requestFocus />
    </EditText>

  
    <Button
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:onClick="buscarproduto"
        android:layout_gravity="center" 
        android:text="@string/buscar"
        android:contentDescription="@string/buscar"/>
    
    <ListView android:layout_width="match_parent"
     
        android:layout_height="wrap_content" android:id="@+id/listaProduto"
        >
        
    </ListView>
        

</LinearLayout>
