<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@color/branco"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:text="Total Pedido "
                android:textSize="@dimen/font"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttt_vlpedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0,00"
                android:textColor="@color/vermelho"
                android:textSize="@dimen/font"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:text="Quant: "
                android:textSize="@dimen/font"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttt_qtpedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="104dp"
                android:layout_y="0dp"
                android:text="0,00"
                android:textColor="@color/vermelho"
                android:textSize="@dimen/font"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/btinserirpedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/button"
                android:onClick="inserirPedido"
                android:text="Novo Pedido" />

            <Button
                android:id="@+id/btatualizalista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/button"
                android:onClick="atualizaLista"
                android:text="Localizar Pedido" />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listapedido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" >
    </ListView>

</LinearLayout>